@model CreateProductDto
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>CreateProduct</h1>

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ürün İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Ürün Girişi</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="productName">Ürün Adı Gir</label>
								<input type="text" class="form-control" asp-for="Name" id="productName">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="price">Ürün Fiyatı Gir</label>
								<input type="text" class="form-control" asp-for="Price" id="price">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="categoryName">Ürün Görseli Gir</label>
								<input type="text" class="form-control" asp-for="Image" id="image">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="categoryName">Ürün Kategorisi Seçiniz</label>
							@Html.DropDownListFor(x=>x.CategoryId,(List<SelectListItem>)ViewBag.v,new{@class="form-control"})
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
							<label for="description">Ürün Açıklaması Gir</label>
								<input type="text" class="form-control" asp-for="Description" id="description">
							</div>
						</div>
						
						<div class="card-action">
							<button class="btn btn-primary">Ürün Ekle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

