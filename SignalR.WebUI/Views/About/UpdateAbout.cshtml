@using SignalR.WebUI.Dtos.AboutDtos
@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Hakkımızda Yazı Güncelleme Sayfası</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Kategori Girişi</div>
						</div>
						<input type="hidden" asp-for="Id"/>
						<div class="card-body">
							<div class="form-group">
								<label for="title">Başlığı Giriniz</label>
								<input type="text" class="form-control" asp-for="Title" id="title">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="image">Görsel URL'sini' Giriniz</label>
								<input type="text" class="form-control" asp-for="Image" id="image">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="description">Açıklamayı Giriniz</label>
								<textarea rows="5" class="form-control" asp-for="Description" id="description" />
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Hakkımda Yazısını Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>