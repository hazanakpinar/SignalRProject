@model CreateDiscountDto
@{
    ViewData["Title"] = "CreateDiscount";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>CreateDiscount</h1>


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İndirimli Ürün İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni İndirimli Ürün Girişi</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Title">Ürün Adı Giriniz</label>
								<input type="text" class="form-control" asp-for="Title" id="Title">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Amount">İndirim Oranı </label>
								<input type="text" class="form-control" asp-for="Amount" id="Amount">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Image">Ürün Görseli Giriniz</label>
								<input type="text" class="form-control" asp-for="Image" id="Image">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Description">Açıklama</label>
								<textarea rows="5" class="form-control" asp-for="Description" id="Description"></textarea> 							
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">İndirimli Ürünü Ekle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
